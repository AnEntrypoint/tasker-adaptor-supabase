{
  "name": "tasker-adaptor-supabase",
  "version": "1.0.0",
  "description": "Storage and service adaptor for tasker-sequential supporting Supabase and SQLite backends",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./supabase": "./src/adapters/supabase.js",
    "./sqlite": "./src/adapters/sqlite.js",
    "./core": "./src/core/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec 'node --input-type=module'",
    "test": "node tests/run-tests.js",
    "test:supabase": "node tests/test-supabase-adapter.js",
    "test:sqlite": "node tests/test-sqlite-adapter.js"
  },
  "keywords": [
    "tasker",
    "sequential",
    "adapter",
    "storage",
    "supabase",
    "sqlite",
    "deno",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "peerDependencies": {
    "sequential-flow": "^1.0.0"
  }
}
